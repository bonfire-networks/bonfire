<div class="w-full">
  {#if !current_user(@__context__)}
    <div class="flex items-start gap-8">
      <div class="w-full">
        {!-- <div class="p-3 rounded-t-xl">
          <div class="w-full pb-3 text-sm font-medium tracking-wide border-b border-base-content/20 text-base-content/70">{l("Recent activities")}</div>
        </div> --}
        <Bonfire.UI.Social.FeedLive
          :if={@feed_component_id}
          id={@feed_component_id}
          hide_tabs
          feed_id={@feed_id}
          feed_ids={@feed_ids}
          feed_name={@feed_name}
          top_page="home"
          page_title={@page_title}
          feed={@feed}
          page_info={@page_info}
          loading={@loading}
          time_limit={30}
        />
      </div>
      {!-- <div class="hidden w-full tablet-lg:flex">
        <Bonfire.Tag.Web.WidgetTagsLive />
      </div> --}
    </div>
    {!-- <footer class="p-10 rounded footer footer-center text-base-content/70">
      <div class="grid grid-flow-col gap-4">
        <a class="link link-hover text-base-content/70">{l("About us")}</a>
        <a class="link link-hover text-base-content/70">{l("Contact")}</a>
        <a class="link link-hover text-base-content/70">{l("Terms")}</a>
        <a class="link link-hover text-base-content/70">{l("Privacy")}</a>
      </div>
    </footer> --}
  {#elseif @feed_component_id}
    <Bonfire.UI.Social.FeedLive
      id={@feed_component_id}
      feed_id={@feed_id}
      feed_ids={@feed_ids}
      feed_name={@feed_name}
      feed={@feed}
      top_page="home"
      page_info={@page_info}
      loading={@loading}
      tab_path_prefix="/feed/"
      tab_link_component={LinkLive}
      sort_by={Settings.get([Bonfire.UI.Social.FeedLive, :sort_by], nil, @__context__)}
      time_limit={Settings.get([Bonfire.UI.Social.FeedLive, :time_limit], 7, @__context__)}
    />
  {/if}
</div>
